<!doctype html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>{block #title|striptags}Doctrine Skeleton{/}</title>

	<script src="https://cdn.tailwindcss.com"></script>
</head>
<body>

<div class="antialiased px-6 text-gray-900">
	<div class="divide-y max-w-xl md:max-w-4xl mx-auto">
		<div class="py-8">
			<h1 class="font-bold text-3xl">
				Contributte / Doctrine Skeleton
			</h1>
		</div>

		<div n:if="$flashes !== []" n:inner-foreach="$flashes as $flash" class="py-2">
			<div n:class="$flash->type === 'success' ? 'bg-green-500', $flash->type === 'info' ? 'bg-blue-500', 'rounded-md px-4 py-2 text-white'">
				{$flash->message}
			</div>
		</div>

		<div class="py-8">
			{include #content}
		</div>

		<div class="py-8">
			&copy; {=date(Y)} by <a href="https://github.com/f3l1x" class="text-blue-600 underline">@f3l1x</a>
		</div>
	</div>
</div>
</body>
</html>



